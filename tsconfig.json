{
  "compilerOptions": {
    "target": "ES2020",                                  
    "lib": ["ES2019"],                                   
    "module": "CommonJS",                                
    "rootDir": "src",                                    
    "outDir": "dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true                                 
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
